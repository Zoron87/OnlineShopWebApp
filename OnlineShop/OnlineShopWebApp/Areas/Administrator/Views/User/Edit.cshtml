@model ShopUser

@{
    ViewData["Title"] = "Редактирование пользователя";
    int i = 0;
}


@if (Model == null)
{
    <h3>Вы не выбрали пользователя!</h3>
    <p><a asp-controller="Home" asp-action="Index">Вернуться на главную страницу</a></p>
}
else
{
    <div class="container-fluid">
        <div class="row">
            <div class="col-3">
                @await Html.PartialAsync("AdminMenu")
            </div>
            <div class="col-9">
                <h3>Редактирование пользователя @Model.Email</h3>
                <form method="post" asp-controller="User" asp-action="Edit" asp-route-email="@Model.Email">
                    <div asp-validation-summary="ModelOnly"></div>
                    <div class="form-group">
                        <label asp-for="Name">Имя пользователя:</label>
                        <input asp-for="Name" class="form-control" value="@Model.Name">
                        <span asp-validation-for="Name"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Password">Пароль:</label>
                        <input asp-for="Password" class="form-control" type="password" value="@Model.Password">
                        <span asp-validation-for="Password"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Role">Роль пользователя:</label>
                        @Html.DropDownList("Role", null, @Model.Role ?? "Выберите роль", htmlAttributes: new { @class = "form-control" })
                    </div>
                    <input class="btn-primary" type="submit" value="Сохранить" />
                    <a class="btn btn-warning" role="button" asp-controller="User" asp-action="GetUsers">Отмена</a>
                </form>
            </div>
        </div>
    </div>
}

