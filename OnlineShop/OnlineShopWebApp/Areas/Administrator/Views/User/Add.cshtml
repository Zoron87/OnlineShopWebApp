@model Register

<div class="container">
    <div class="row">
        <div class="col-md-3">
            @await Html.PartialAsync("AdminMenu")
        </div>
        <div class="col-md-9">
            <form method="post" asp-controller="User" asp-action="Add">
                <div asp-validation-summary="ModelOnly"></div>
                <div class="form-group form-outline mb-3">
                    <label asp-for="Email">Электронный адрес (Email):</label>
                    <input asp-for="Email" class="form-control" placeholder="Электронный адрес">
                    <span asp-validation-for="Email"></span>
                </div>
                <div class="form-group form-outline mb-3">
                    <label asp-for="Password">Пароль:</label>
                    <input asp-for="Password" class="form-control" type="password" placeholder="Пароль">
                    <span asp-validation-for="Password"></span>
                </div>
                <div class="form-group form-outline mb-3">
                    <label asp-for="ConfirmPassword">Подтвердите пароль:</label>
                    <input asp-for="ConfirmPassword" class="form-control" type="password" placeholder="Повторный пароль">
                    <span asp-validation-for="ConfirmPassword"></span>
                </div>
                 
                <div class="d-grid gap-2 d-md-block mt-3">
                    <button class="btn btn-primary" type="submit">Сохранить</button>
                    <a class="btn btn-warning" role="button" asp-area="Administrator" asp-controller="User" asp-action="Index">Отмена</a>
                </div>
            </form>
        </div>
    </div>
</div>