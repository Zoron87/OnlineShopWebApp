@model User

@{
	ViewData["Title"] = "Личный профиль пользователя";
}

<div class="container">
	<div class="row">
		<div class="col-md-3">
			@await Html.PartialAsync("UserMenu")
		</div>
		<div class="col-md-9">
			<h3 class="section-title mb-3"><span>Профиль пользователя @Model.Email</span></h3>

            <section style="background-color: #eee;">
                <div class="text-end cart-buttons" style="padding-right: 1rem">
                    <a role="button" class="btn btn-warning text-end" asp-controller="Account" asp-action="Edit">Редактировать профиль</a>
                </div>
                <div class="container py-1">
                    <div class="row">
                        <div class="col-lg-4">
                            <div class="card mb-4">
                                <div class="card-body text-center">
                                    <img src="@Model.AvatarImagepath" alt="avatar"
                                         class="img-fluid" style="width: 150px;">
                                    <h5 class="my-3">@Model.Name</h5>
                                    <p class="text-muted mb-1">@Model.Role</p>
                                </div>
                            </div>
                            <a class="btn btn-warning" asp-controller="Account" asp-action="DeleteAvatar" asp-route-userId="@Model.Id">Удалить аватар</a>
                        </div>
                        <div class="col-lg-8">
                            <div class="card mb-4">
                                <div class="card-body">
                                    <div class="row">
                                        <div class="col-sm-3">
                                            <p class="mb-0">Ваше имя</p>
                                        </div>
                                        <div class="col-sm-9">
                                            <p class="text-muted mb-0">@Model.Name</p>
                                        </div>
                                    </div>
                                    <hr>
                                    <div class="row">
                                        <div class="col-sm-3">
                                            <p class="mb-0">Email</p>
                                        </div>
                                        <div class="col-sm-9">
                                            <p class="text-muted mb-0">@Model.Email</p>
                                        </div>
                                    </div>
                                    <hr>
                                    <div class="row">
                                        <div class="col-sm-3">
                                            <p class="mb-0">Телефон</p>
                                        </div>
                                        <div class="col-sm-9">
                                            <p class="text-muted mb-0">@Model.Phone</p>
                                        </div>
                                    </div>
                                    <hr>
                                    <div class="row">
                                        <div class="col-sm-3">
                                            <p class="mb-0">Адрес</p>
                                        </div>
                                        <div class="col-sm-9">
                                            <p class="text-muted mb-0">@Model.Address</p>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </section>

		</div>
	</div>
</div>