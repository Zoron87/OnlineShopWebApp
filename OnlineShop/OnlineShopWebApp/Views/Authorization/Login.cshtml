@model Login

<div class="container mb-3">
    <div class="row">
        <div class="col-12">
            <div class="page-register p-3">
                <h1 class="section-title h3"><span>Авторизация</span></h1>
                <div class="row">
                    <div class="col-md-6 offset-md-3">
                        <div class="tab-content">
                            <div class="tab-pane fade show active" id="pills-login" role="tabpanel" aria-labelledby="tab-login">
                                <form method="post" asp-controller="Authorization" asp-action="Login" asp-route-returnUrl="@Model.ReturnUrl">
                                    <div class="validation" asp-validation-summary="ModelOnly"></div>
                                    <div class="form-outline mb-4">
                                        <label asp-for="Email">Email:</label><br />
                                        <input type="email" asp-for="Email" class="form-control" placeholder="Email" />
                                        <span asp-validation-for="Email"></span>
                                    </div>

                                    <div class="form-outline mb-4">
                                        <label asp-for="Password">Пароль:</label><br />
                                        <input type="password" asp-for="Password" class="form-control" placeholder="Пароль" />
                                        <span asp-validation-for="Password"></span>
                                    </div>

                                    <div class="d-flex justify-content-center mb-2">
                                        <div class="form-check mb-md-0">
                                            @Html.CheckBox("isRememberMe", true)
                                            <label class="form-check-label"> Запомнить меня? </label>
                                        </div>
                                    </div>

                                    <div class="d-grid">
                                        <button type="submit" class="btn btn-primary mb-4">Войти</button>
                                    </div>
                                    
                                    <div class="text-center">
                                        <p><a asp-controller="Authorization" asp-action="Registration" asp-route-returnUrl="@Model.ReturnUrl">Регистрация нового пользователя</a></p>
                                    </div>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
