@model Register

<div class="tab-content">
    <div class="tab-pane fade show active" id="pills-login" role="tabpanel" aria-labelledby="tab-login">
        <form method="post" asp-controller="Authorization" asp-action="Registration">
            <div class="validation" asp-validation-summary="ModelOnly"></div>
            <div class="form-outline mb-4">
                <label asp-for="Email">Email:</label><br />
                <input asp-for="Email" type="email" class="form-control" />
                <span asp-validation-for="Email"></span>
            </div>

            <div class="form-outline mb-4">
                <label asp-for="Password">Пароль:</label><br />
                <input asp-for="Password" type="password" class="form-control" />
                <span asp-validation-for="Password"></span>
            </div>

            <div class="form-outline mb-4">
                <label asp-for="ConfirmPassword">Подтвердите пароль:</label><br />
                <input asp-for="ConfirmPassword" type="password" class="form-control" />
                <span asp-validation-for="ConfirmPassword"></span>
            </div>

            <div class="row mb-4">
                <div class="col-md-6 d-flex justify-content-center">
                    <div class="form-check mb-3 mb-md-0">
                        @Html.CheckBox("isRememberMe", true)
                        <label class="form-check-label"> Запомнить меня? </label>
                    </div>
                </div>
            </div>
            <button type="submit" class="btn btn-primary btn-block mb-4">Зарегистрироваться</button>
         </form>
    </div>
</div>