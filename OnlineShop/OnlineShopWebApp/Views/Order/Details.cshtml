@model OrderDetails

@{
    ViewData["Title"] = "Детали заказа";
}

<form method="post" asp-controller="Order" asp-action="Index">
    <div class="container-fluid">
        <div class="row">
            <div class="validation" asp-validation-summary="ModelOnly"></div>
            <div class="mb-3 col-6">
                <label asp-for="Name" class="form-label">Ваше имя:</label>
                <input asp-for="Name" class="form-control">
                <span asp-validation-for="Name"></span>
            </div>
            <div class="mb-3 col-6">
                <label asp-for="Email" class="form-label">Электронная почта:</label>
                <input asp-for="Email" type="email" class="form-control">
                <span asp-validation-for="Email"></span>
            </div>

            <div class="mb-3 col-6">
                <label asp-for="Phone" class="form-label">Телефон:</label>
                <input asp-for="Phone" type="tel" class="form-control">
                <span asp-validation-for="Phone"></span>
            </div>
            <div class="mb-3 col-6">
                <label asp-for="Address" class="form-label">Адрес доставки:</label>
                <input asp-for="Address" name="Address" class="form-control">
                <span asp-validation-for="Address"></span>
            </div>

            <div class="mb-3 col-6">
                <label asp-for="DeliveryDate" class="form-label">Дата получения:</label>
                <input asp-for="DeliveryDate" type="date" class="form-control">
                <span asp-validation-for="DeliveryDate"></span>
            </div>

            <button type="submit" class="btn btn-primary">Отправить</button>
         </div>
    </div>
</form>