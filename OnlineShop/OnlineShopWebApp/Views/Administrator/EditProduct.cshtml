@model Product

<form method="post" asp-controller="Administrator" asp-action="SaveProduct" asp-route-productId="@Model.Id">
    <div class="form-group">
        <label>Название:</label>
        <input type="text" class="form-control" name="Name" value="@Model.Name">
    </div>
    <div class="form-group">
        <label>Цена:</label>
        <input class="form-control" name="Cost" value="@Model.Cost">
    </div>
    <div class="form-group">
        <label>Описание:</label>
        <input class="form-control" name="Description" value="@Model.Description">
    </div>
    <div class="form-group">
        <label>Изображение:</label>
        <input class="form-control" name="ImagePath" value="@Model.ImagePath">
    </div>

    <input class="btn-primary" type="submit" value="Сохранить" />
    <a class="btn btn-warning" role="button" asp-controller="Administrator" asp-action="GetProducts">Отмена</a>
</form>