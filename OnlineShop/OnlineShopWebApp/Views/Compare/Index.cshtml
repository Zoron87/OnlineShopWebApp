@model List<Product>;

@{
    ViewData["Title"] = "Compare Page";
}
<div class="contianer-fluid">
    <div class="row">
        <table class="table">
            <thead>
                <tr>
                    <th scope="col">Name</th>
                    <th scope="col">Cost</th>
                    <th scope="col">Description</th>
                    <th scope="col">Image</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                <tr>
                    <td>@item.Name</td>
                    <td>@item.Cost</td>
                    <td>@item.Description</td>
                </tr>
                }
            </tbody>
        </table>
   /div>
</div>
