@model List<Product>;

@{
    ViewData["Title"] = "Compare Page";
}

@if (Model.Count == 0 || Model == null)
{
    <h3>Список для сравнения пуст!</h3>    
}
else
{
    <div class="contianer-fluid">
        <div class="row">
            <a href="/compare/clear">Очистить список</a>
            <table class="table">
                <thead>
                    <tr>
                        <th scope="col">Name</th>
                        <th scope="col">Cost</th>
                        <th scope="col">Description</th>
                        <th scope="col">Image</th>
                        <th scope="col"></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                    <tr>
                        <td>@item.Name</td>
                        <td>@item.Cost</td>
                        <td>@item.Description</td>
                        <td><img width="100px" src="/img/products/@item.ImagePath" /></td>
                            <td><a class="btn btn-danger" style="display:inline;" href="/compare/DeleteItem/?productid=@item.Id"><i class="fa-solid fa-circle-xmark"></i></a></td>
                    </tr>
                    }
                </tbody>
            </table>
       </div>
    </div>
}
